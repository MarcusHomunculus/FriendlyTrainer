<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:background="@color/color_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_amend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="@dimen/main_container_outside_margin"
        app:cardCornerRadius="@dimen/main_container_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/color_primary_one"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/amend_click_text"
                android:text="@string/amend_container_title"
                android:textColor="@color/color_text"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_container_title_margin_start"
                android:layout_marginVertical="@dimen/main_container_title_margin_vertical"
                android:textSize="@dimen/main_container_title_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/amend_arrow"
                android:src="@drawable/collapse_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/main_container_title_arrow_end"
                android:layout_marginTop="@dimen/main_container_title_arrow_top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/amend_separator"
                android:background="@color/color_background"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/main_container_separator_vertical"
                android:layout_marginHorizontal="@dimen/main_container_separator_sides"
                app:layout_constraintTop_toBottomOf="@id/amend_click_text" />

            <TextView
                android:id="@+id/amend_content"
                android:text="@string/amend_container_content"
                android:textColor="@color/color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/amend_content_vertical"
                android:layout_marginStart="@dimen/amend_content_start"
                app:layout_constraintTop_toBottomOf="@id/amend_separator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent" />

            <EditText
                android:id="@+id/amend_enter"
                android:textColor="@color/color_text"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/amend_insert_start"
                android:layout_marginTop="@dimen/amend_insert_top"
                android:layout_marginBottom="@dimen/amend_insert_bottom"
                app:layout_constraintTop_toBottomOf="@id/amend_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/top_hideable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="amend_separator, amend_content, amend_enter"
                android:visibility="visible"
                />
                <!--tools:visibility="gone"-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/container_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_container_spacing_top"
        android:layout_marginHorizontal="@dimen/main_container_outside_margin"
        app:cardCornerRadius="@dimen/main_container_radius"
        app:layout_constraintTop_toBottomOf="@id/container_amend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:backgroundTint="@color/color_primary_sec"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/progress_click_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_container_title_margin_start"
                android:layout_marginVertical="@dimen/main_container_title_margin_vertical"
                android:textSize="@dimen/main_container_title_size"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:text="@string/progress_container_title" />

            <ImageView
                android:id="@+id/progress_arrow"
                android:src="@drawable/expand_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/main_container_title_arrow_end"
                android:layout_marginTop="@dimen/main_container_title_arrow_top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
